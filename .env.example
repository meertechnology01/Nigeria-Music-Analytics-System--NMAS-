# ============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit the .env file to version control
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment: development, staging, production
APP_ENV=development

# Application name (displayed in UI and logs)
APP_NAME="Nigeria Music Analytics System (NMAS)"

# Debug mode (set to False in production)
DEBUG=True

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Backend API settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend settings
FRONTEND_URL=http://localhost:5173

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database URL (SQLite for dev, PostgreSQL for production)
# Development (SQLite):
DATABASE_URL=sqlite:///./data/engine.db

# Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================================================
# API KEYS AND EXTERNAL SERVICES
# ============================================================================

# YouTube Data API v3
# Get your API key from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Gemini AI API Key
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Apple Music API (if you need it in the future)
# APPLE_MUSIC_API_KEY=your_apple_music_api_key

# Optional: Spotify API (if you add it in the future)
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# Algorithm for JWT encoding
ALGORITHM=HS256

# Token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=60

# Rate limit: requests per hour
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=backend/logs/app.log

# Log rotation (keep last N files)
LOG_ROTATION_COUNT=5

# ============================================================================
# ECONOMIC MODEL PARAMETERS
# ============================================================================

# Average revenue per stream (in USD)
REVENUE_PER_STREAM=0.004

# Economic multiplier for GDP calculation
ECONOMIC_MULTIPLIER=1.8

# Job creation ratio (jobs per USD revenue)
JOB_CREATION_RATIO=0.00002

# Export multiplier (percentage of international streams)
EXPORT_MULTIPLIER=0.65

# ============================================================================
# DATA COLLECTION SETTINGS
# ============================================================================

# Number of tracks to fetch per platform
DEFAULT_FETCH_LIMIT=100

# Data refresh interval (in seconds)
DATA_REFRESH_INTERVAL=86400

# Enable/disable specific harvesters
ENABLE_YOUTUBE_HARVESTER=True
ENABLE_APPLE_MUSIC_HARVESTER=True
ENABLE_DEEZER_HARVESTER=True
ENABLE_AUDIOMACK_HARVESTER=True
ENABLE_BOOMPLAY_HARVESTER=True
ENABLE_TURNTABLE_HARVESTER=True

# User agent for web scraping
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# ============================================================================
# MONITORING AND ANALYTICS
# ============================================================================

# Optional: Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Google Analytics ID
# GA_TRACKING_ID=your_ga_tracking_id

# ============================================================================
# DEPLOYMENT SETTINGS (PRODUCTION ONLY)
# ============================================================================

# Render.com or cloud platform specific
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# SSL/TLS settings
# FORCE_HTTPS=True
# SSL_REDIRECT=True

# ============================================================================
# REDIS CONFIGURATION (OPTIONAL - FOR CACHING)
# ============================================================================

# Redis URL (if using Redis for caching)
# REDIS_URL=redis://localhost:6379/0

# Cache TTL (Time To Live) in seconds
# CACHE_TTL=3600

# ============================================================================
# TESTING ENVIRONMENT
# ============================================================================

# Test database URL (separate from development)
# TEST_DATABASE_URL=sqlite:///./test.db

# Enable test mode
# TESTING=False

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable AI features
ENABLE_BEATS_AI=True

# Enable/disable experimental features
ENABLE_EXPERIMENTAL_FEATURES=False

# Enable data export functionality
ENABLE_DATA_EXPORT=True

# ============================================================================
# NOTES
# ============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update all "your_*_here" values with actual credentials
# 3. Never commit .env file to version control
# 4. For production, use environment variables from your hosting platform
# 5. Rotate secrets regularly for security
# 6. Use strong, unique values for SECRET_KEY
# 7. Keep API keys secure and limit their scope
# ============================================================================
